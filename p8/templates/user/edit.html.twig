{% extends 'base.html.twig' %}

{% block header_title %}<h1 class="text-center mt-3">Modifier <strong>{{ user.username }}</strong></h1>{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
    <div class="row col-md-6 mx-auto">
        {{ form_start(form, {'action' : path('user_edit', { 'id' : user.id })}) }}
        {{ form_start(form) }}
        <div class="mb-3">
            {{ form_row(form.email) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.Username) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.roles) }}
        </div>

        <button type="submit" class="btn btn-success pull-right">Modifier</button>
        {{ form_end(form) }}
    </div>
{% endblock %}

