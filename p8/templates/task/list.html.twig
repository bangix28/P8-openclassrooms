{% extends 'base.html.twig' %}

{% block header_img %}<img class="img-responsive mt-3 rounded" src="{{ asset('build/todolist_content.jpg') }}" alt="todo list">{% endblock %}

{% block body %}
    <div class="mb-3">
    <a href="{{ path('task_create') }}" class="btn btn-primary pull-right">Créer une tâche</a>
    </div>
    <div class="row">
        {% for task in tasks %}
            <div class="col-sm-4 col-lg-4 col-md-4">
                {% include 'task/card.html.twig' %}
            </div>
        {% else %}
            <div class="alert alert-warning" role="alert">
                Il n'y a pas encore de tâche enregistrée. <a href="{{ path('task_create') }}" class="btn btn-warning pull-right">Créer une tâche</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
